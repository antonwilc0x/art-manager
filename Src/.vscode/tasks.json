{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": ["build", "ArtManager.CLI"],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish debug linux x64",
            "command": "dotnet publish ArtManager.CLI -r linux-x64 -c Debug /p:PublishSingleFile=true /p:PublishTrimmed=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish debug windows x64",
            "command": "dotnet publish ArtManager.CLI -r win-x64 -c Debug /p:PublishSingleFile=true /p:PublishTrimmed=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release linux x64",
            "command": "dotnet publish ArtManager.CLI -r linux-x64 -c Release /p:PublishSingleFile=true /p:PublishTrimmed=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release windows x64",
            "command": "dotnet publish ArtManager.CLI -r win-x64 -c Release /p:PublishSingleFile=true /p:PublishTrimmed=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": ["watch", "run", "ArtManager.CLI"],
            "problemMatcher": "$tsc"
        }
    ]
}
